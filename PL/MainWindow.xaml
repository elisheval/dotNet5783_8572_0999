        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button Content="manager" FontSize="50" Background="Aqua" Click="NavigateToManagerWindow"/>
        <Button Content="new order" FontSize="50" Background="Aqua" Click="NavigateToCatalogWindow"/>
        <Button Content="order tracking" FontSize="50" Background="Aqua" Click="NavigateToOrderTrackingWindow"/>
    </StackPanel>
</Window>
